entity File {
  name: String
  size: Int
}

entity Directory {
  name: String
  size: Int = sum(files.size) + sum(subDirectories.size) + sum(files.directory.files.size)
  
//  tree: String = name + concat(files.name) + "\n  " + concat(subDirectories.tree)
}

relation File.directory 1 <-> * Directory.files
relation Directory.parent ? <-> * Directory.subDirectories